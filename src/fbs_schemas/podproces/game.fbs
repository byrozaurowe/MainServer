namespace mainServer.schemas.FGame;

enum FVehicleType:byte {Pedestrian, Cyclist, Car}

table FVehicle {
    vehicleType:FVehicleType;
    velocity:int;
}

table FClient {
    name:string;
    id:int;
    ipAddress:string;
    port:int;
    vehicle:FVehicle;
}

table FTeam {
    clients:[FClient];
}

table FGame {
  id:int;
  teams:[FTeam];
  city:string;
  host:int;
  clientsMax:int;
}

root_type FGame;