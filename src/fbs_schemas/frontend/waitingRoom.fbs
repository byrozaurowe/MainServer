namespace UPZP.WaitingRoom;

enum VehicleType:byte {Pedestrian, Cyclist, Car}

table Client {
    name:string;
    id:int;
    vehicle:Vehicle;
}

table Vehicle {
    vehicleType:VehicleType;
    velocity:int;
}

table Team {
    clients:[Client];
}

table WaitingRoom {
  id:int;
  teams:[Team];
  city:string;
  host:int;
  clientsMax:int;
}

root_type WaitingRoom;

root_type Vehicle;